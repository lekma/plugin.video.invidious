<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.invidious"
       name="Invidious"
       version="0.0.15"
       provider-name="lekma">
    <requires>
        <import addon="xbmc.python" version="2.26.0" />
        <import addon="script.module.six" version="1.11.0" />
        <import addon="script.module.kodi-six" version="0.1.2" />
        <import addon="script.module.requests" version="2.22.0" />
        <import addon="script.module.inputstreamhelper" version="0.4.3" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <summary lang="en_GB">Invidious Addon</summary>
        <description lang="en_GB">Invidious Addon</description>
        <summary lang="fr_FR">Addon pour Invidious</summary>
        <description lang="fr_FR">Addon pour Invidious</description>
        <license>GPL-3.0-only</license>
        <platform>all</platform>
        <source>https://github.com/lekma/plugin.video.invidious</source>
        <assets>
            <icon>resources/media/icon.png</icon>
	    <fanart>resources/media/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.invidious"
        name="Invidious Repository"
        version="0.0.1"
        provider-name="lekma">
    <extension point="xbmc.addon.repository" name="Invidious Addon Repository">
        <checksum>https://raw.githubusercontent.com/DavidHenryThoreau/plugin.video.invidious/master/addons.xml.md5</checksum>
        <info compressed="false">https://raw.githubusercontent.com/DavidHenryThoreau/plugin.video.invidious/master/addons.xml</info>
        <datadir zip="true">https://github.com/DavidHenryThoreau/plugin.video.invidious/raw/master/repo</datadir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="fr">Dépot Invidious</summary>
        <description lang="fr">Télécharger et installer Invidious</description>
        <summary lang="en">Invidious Repository</summary>
        <description lang="en">Download and install Invidious</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
